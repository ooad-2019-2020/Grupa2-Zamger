<script type="text/javascript">
    function EnableDisableTextBox(ddlModels) {
        var selectedValue = ddlModels.options[ddlModels.selectedIndex].value;
        var txtOther = document.getElementById("prosjekBScInput");
        var txtRe = document.getElementById("BSCinput")
        var txtOtherDrzava = document.getElementById("državaBSc");
        if (selectedValue == 2 || selectedValue == 1) {
            txtOther.hidden = false;
            txtRe.setAttribute("required", "");
            if (!txtOther.disabled) {
                txtOther.focus();
            }
            if (selectedValue == 2) {
                txtOtherDrzava.hidden = false;
            }
        }
        else {
            txtOther.hidden = true;
            txtRe.removeAttribute("required");
            txtOtherDrzava.hidden = true;
        }
    }
</script>

