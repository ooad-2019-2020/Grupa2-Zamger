    <div class="page-wrapper" style="min-height: 723px;">
        <!-- content -->
        <form asp-antiforgery="false" asp-action="UrediNastavnoOsoblje" method="post">
            <div class="content container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-7 col-md-12 col-sm-12 col-12">
                            <h5 class="text-uppercase">Uredi podatke za osobu: @Model.Ime @Model.Prezime</h5>
                        </div>
                        <div class="col-lg-5 col-md-12 col-sm-12 col-12">
                            <ul class="list-inline breadcrumb float-right">
                                <li class="list-inline-item"><a href="~/studentska/dashboard">Početna</a></li>
                                <li class="list-inline-item"> Uredi osobu</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="page-content">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="card">
                                <div class="page-title">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="Page-title">Podaci osobe</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-body">

                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-12">

                                            <div class="form-group custom-mt-form-group">
                                                <input type="text" name="imePrezime" required placeholder="@Model.Ime @Model.Prezime" readonly>
                                                <label class="control-label">Ime i prezime osobe</label><i class="bar"></i>
                                            </div>
                                            <div class="form-group custom-mt-form-group">
                                                <select name="trenutnaTitula" placeholder="@Model.Titula">
                                                    @foreach (string t in ViewBag.titule)
                                                    {
                                                        if (t.Equals(Model.Titula))
                                                        {
                                                            <option selected>@t</option>
                                                        }
                                                        else
                                                        {
                                                            <option>@t</option>
                                                        }

                                                    }
                                                </select>
                                                <label class="control-label">Titula</label><i class="bar"></i>
                                            </div>

                                            <div class="form-group custom-mt-form-group">
                                                <select name="predmet1" placeholder="@ViewBag.predmetiNaKojimPredaje[0]">
                                                    <option value="-1">Izaberite</option>
                                                    @foreach (KeyValuePair<string, int> entry in ViewBag.sviPredmeti)
                                                    {
                                                        if (entry.Key.Equals(ViewBag.predmetiNaKojimPredaje[0]))
                                                        {
                                                            <option value="@entry.Value" selected>@entry.Key</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@entry.Value">@entry.Key</option>
                                                        }

                                                    }
                                                </select>
                                                <label class="control-label">1. predmet na kom predaje</label><i class="bar"></i>
                                            </div>

                                        </div>


                                        <div class="col-lg-6 col-md-6 col-sm-6 col-12">

                                            <div class="form-group custom-mt-form-group">
                                                <input type="text" name="passwordUser" placeholder="@ViewBag.pass">
                                                <label class="control-label">Trenutni password</label><i class="bar"></i>
                                            </div>



                                            <div class="form-group custom-mt-form-group">
                                                <input type="text" name="prebivaliste" placeholder="@Model.MjestoPrebivališta">
                                                <label class="control-label">Mjesto prebivališta</label><i class="bar"></i>
                                            </div>

                                            @if (ViewBag.predmetiNaKojimPredaje.Count == 2)
                                            {
                                                <div class="form-group custom-mt-form-group">
                                                    <select name="predmet2" placeholder="@ViewBag.predmetiNaKojimPredaje[1]">
                                                        <option value="-1">Izaberite</option>
                                                        @foreach (KeyValuePair<string, int> entry in ViewBag.sviPredmeti)
                                                        {
                                                            if (entry.Key.Equals(ViewBag.predmetiNaKojimPredaje[1]))
                                                            {
                                                                <option value="@entry.Value" selected>@entry.Key</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@entry.Value">@entry.Key</option>
                                                            }
                                                        }
                                                    </select>
                                                    <label class="control-label">2. predmet na kom predaje</label><i class="bar"></i>
                                                </div>
                                            }


                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">

                                            <div class="form-group text-center custom-mt-form-group">
                                                <button class="btn btn-primary mr-2" type="submit">Spremi</button>
                                                <a href="/studentska/svo-nastavno-osoblje-list" class="btn btn-secondary"> Odustani</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
